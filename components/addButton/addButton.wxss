/* components/addButton/addButton.wxss */


.add_wrap {
    position: fixed;
    bottom: 150rpx;
    right: 150rpx;

}


.add_button {
    position: fixed;
    z-index: 1000;
    /*bottom: 30rpx;*/
    /*right: 30rpx;*/
    background-color: #d2d2d2;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;


    color: #fff;
    line-height: 80rpx;
    font-size: 160rpx;
}



.add_menu {
    position: absolute;
    left: -25rpx;
    /*display: flex;*/
    flex-direction: column;
    transform: translateX(0);
    transition:  .5s;
    visibility: hidden;
    opacity: 0;
    /*top: -100%;*/

}

.add_menu .menu_item {
    height: 50rpx;
    width: 160rpx;
    border-radius: 5rpx;
    text-align: center;
    background-color: #d2d2d2;
    margin-bottom: 20rpx;

}


.menu_show {
    visibility: visible;
    opacity: 1;
    transform: translateY(-100%);
}

