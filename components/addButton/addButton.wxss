/* components/addButton/addButton.wxss */
page {
    height: 100%;
}
.m-backgraund{
    position: fixed;
    display: flex;
    min-height: 100%;
    flex-direction: column;
    bottom: 0;
    right: 0;
}

.note {
    position: absolute;
    width: 370rpx;
    min-height: 100%;
    right: 0;
    bottom: 0;
    background-color: #f4f4f4;
}

.noteIcon {
    margin: 20rpx;
}

.noteText {
    background-color: #ececec;
    position: absolute;
    margin: 10rpx;
    padding: 20rpx;
    width: 300rpx;
    min-height: 85%;
    right: 5rpx;
    bottom: 10rpx;
}

.add_wrap {
    position: fixed;
    bottom: 150rpx;
    right: 150rpx;

}
.add_button {
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    /*bottom: 30rpx;*/
    /*right: 30rpx;*/
    background-color: #d2d2d2;
    /*background-color: #1b1c38;*/
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;

    font-size: 80rpx;
}

.add_button view {
    height: 50rpx;
    line-height: 40rpx;
    z-index: 2001;
    color: #fff;
}

.add_menu {
    position: absolute;
    /*display: flex;*/
    flex-direction: column;
    transform: translateX(0);
    transition:  .5s;
    visibility: hidden;
    opacity: 0;
    /*top: -100%;*/

}

.add_menu .menu_item {
    height: 60rpx;
    line-height: 60rpx;
    width: 100rpx;
    border-radius: 10rpx;
    text-align: center;
    background-color: #d2d2d2;
    margin-bottom: 20rpx;

    font-size: 23rpx;
    color: #eee;
}


.menu_show {
    visibility: visible;
    opacity: 1;
    transform: translateY(-100%);
}



