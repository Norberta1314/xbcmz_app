page {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 100%;
}

button {
  padding: 0;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/02/28/k7Ub9S.png');
  background-size: cover;
  background-attachment: fixed;
  flex: 1;
}

.m-backgraund .input{
  background-color: #f9f9f9;
  width: 590rpx;
  margin: 20rpx 40rpx 0rpx 40rpx;
  padding: 10rpx 40rpx 10rpx 40rpx;
  border-radius: 10rpx;
}

.placeholder {
  font-size: 35rpx;
  color: #ccc;
}
button {
  background: transparent;
  margin-top: 22rpx;
  padding: 0;
  width: 683rpx;
  height: 78rpx;
}
image {
  width: 683rpx;
  height: 78rpx;
}

.at {
  position: absolute;
  background-color: #ebf4fb;
  width: 600rpx;
  height: 700rpx;
  top: 100rpx;
  left: 75rpx;
}

.friend {
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  border-radius: 10rpx;
}

.friend::after{
  border: none;
}

.click {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx;
  border: 1rpx solid #aaa;
}

.click .icon{
  position: absolute;
  top: -30%;
  left: -30%;
  width: 50rpx;
  height: 50rpx;
}

.head {
  background-color: #ead9e4;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 60rpx;
}

.name {
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx;
}