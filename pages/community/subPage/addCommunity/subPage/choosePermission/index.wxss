page {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 100%;
}

button {
  padding: 0;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/02/21/kRGrIP.png');
  background-size: cover;
  background-attachment: fixed;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.choose-Permission {
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx;
  border-radius: 10rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 40rpx;
  border-radius: 40rpx;
  margin-right: 40rpx;
}

.choose {
  background-color: #ead9e4;
}
.unChoose{
  background-color: #eee;
}

.submit{
  background-color: #cae2eb;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx;
}
