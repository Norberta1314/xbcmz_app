page {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #f5f5f5;
}
button {
    padding: 0;
}

.tablist {
    display: flex;
    background: #fff;
    height: 80rpx;

    border-bottom: 4rpx solid #bfbfbf;
}

.tablist .item {
    flex: auto;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #000;
}

.tablist .item.select {
    color: #73a2c3;
}

.tablist .item.select::after {
    content: "";
    height: 4rpx;
    display: block;
    position: absolute;
    left: 0;
    bottom: -2rpx;
    right: 0;
    background:  #73a2c3;
}

.add_button {
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
    background-color: #d2d2d2;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;

    color: #fff;
    line-height: 70rpx;
    font-size: 160rpx;
}

.recommendList {
    position: relative;
    white-space: nowrap;
    display: flex;
    flex-direction: row;
    height: 70rpx;

    width: 100%;
    font-size: 28rpx;
}

.recommendList .item {
    display:inline-block;
    align-items: center;

    margin: 10rpx;
    margin-bottom: 0;
    padding: 10rpx 20rpx 10rpx 20rpx;
    min-width: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 8rpx;
}

