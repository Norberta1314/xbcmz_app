.comment_block {
    position: relative;
    min-height: 300rpx;
    background-color: #fff;
    margin: 20rpx 50rpx 10rpx 50rpx;
    border: 5rpx solid #dcdcdc;
    border-radius: 4rpx;
}

.comment_info {
    position: relative;
}

.comment_name {
    display:inline-block;
    margin-top: 15rpx;
    margin-left: 28rpx;

    height: 45rpx;
    line-height: 45rpx;
    font-size: 40rpx;
}

.follow {
    display:inline-block;
    float: right;
    margin-top: 15rpx;
    margin-right: 28rpx;
    background-color: #6f98a8;
    color: #fff;
    width: 90rpx;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 24rpx;
}

.comment_question {
    font-size: 35rpx;
    line-height: 45rpx;
    min-height: 45rpx;
    margin: 20rpx 30rpx 40rpx 40rpx;
}

.like_block {
    position: absolute;
    display: flex;
    flex-direction: row;
    color: #646464;
    bottom: 20rpx;
    right:50rpx;
}

.like_block text {
    display: inline-block;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    /*margin-bottom: 5rpx;*/
}

.like_img {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}


.icon_item {
    display: flex;
    flex-direction: row;
    align-items: center;
}