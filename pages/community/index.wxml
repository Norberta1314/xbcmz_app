<view class='m-backgraund'>
  <!--顶部tab-->
  <view class='tablist'>
    <view wx:for="{{ tabList }}"
          class='item {{currentTab==index?"select":""}}'
          data-pos='{{ index }}'
          wx:key = 'index'
          bindtap='tabItemClick'>
      <text>{{ item }}</text>
    </view>
  </view>

  <!--讨论-->
  <view hidden='{{ currentTab !== 0}}'>
    <view  wx:for="{{ comments }}" data-id="{{ item.id }}" wx:key='index'>
      <view class="comment_block">

        <!--用户名-->
        <view class="comment_info">
          <view class="comment_name">{{ item.name }}</view>
          <button class="follow">+关注</button>
        </view>
        <!--问题-->
        <view bindtap='tapHandleComment' data-id="{{ item.id }}" class="comment_question">
          {{ item.title }}
        </view>
        <!--点赞回复-->
        <view class='like_block'>
          <view class="icon_item">
            <image class='like_img' src='../../images/comunity/comment.png'></image>
            <text>{{item.comment_num}}</text>
          </view>

          <view class="icon_item">
            <image class='like_img'
                   src='{{ item.stared?"../../images/comunity/like_selected.png":"../../images/comunity/like_unselected.png"}}'
                   bindtap='likeClick' data-pos="{{ index }}"></image>
            <text>{{item.star_num}}</text>
          </view>
        </view>

      </view>
    </view>
  </view>

  <!--推荐-->
  <view hidden='{{ currentTab !== 1}}'>
    <scroll-view scroll-x="true" class='recommendList'>
      <view wx:for="{{ recommentItem }}"
            class='item {{currentRecomment==index?"select":""}} {{ "bg_" + backgroundItem[index] }}'
            data-pos='{{ index }}' bindtap='recommentItemClick'
            wx:key='index'
      >
        <text>{{ item.name }}</text>
      </view>
    </scroll-view>

    <view wx:for='{{ suggestItem }}' wx:key='{{ item.id }}'
          class='suggest-card'
          data-id='{{ item.id }}'
          bindtap='bindChooseSuggest'
    >
      <view class='suggest-title'>
        {{ item.title }}
      </view>
      <view class='suggest-info'>
        {{ item.info }}
      </view>
      <view class='suggest-form'>
        来源：{{ item.form }}
      </view>
    </view>
  </view>


  <!--<view class='add_button'>+</view>-->
  <add></add>
</view>