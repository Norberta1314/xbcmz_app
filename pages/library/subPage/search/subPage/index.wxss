page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/03/03/kLzuKs.png');
  background-size: cover;
  background-attachment:fixed;

  display: flex;
  flex-direction: column;
  flex: 1;
}

.title {
  color: #eeeeee;
  display: flex;
  flex-direction: row;
  margin: 50rpx 10rpx 10rpx 60rpx;
}

image{
  width: 150rpx;
  height: 213rpx;
  margin: 10rpx;
}

.book-info{
  display: flex;
  flex-direction: column;
  margin: 10rpx;
  width: 300rpx;
  font-size: 25rpx;
}

.book-info .name {
  font-size: 45rpx;
  margin: 20rpx;
}

.doubanScore{
  margin: 40rpx 10rpx
}

.douban-title {
  font-size: 20rpx;
}

.douban-score {
  color: #fcbd36;
  font-size: 70rpx;
}

.resource {
  margin: 20rpx 0 20rpx 60rpx;
}

.readNow {
  color: #50a9bf;
  font-size: 25rpx;
  margin: 0 0 10rpx 30rpx;
}

.school {
  color: #eeeeee;
  font-size: 30rpx;
  margin: 0 0 10rpx 20rpx;
}

.school text {
  color: #fceb6c;
  font-size: 34rpx;
  margin: 0 2rpx 0 2rpx;
}

.info{
  color: #eee;
  margin: 5rpx 60rpx 20rpx 60rpx;
}
.info-name {
  font-size: 35rpx;
  margin: 10rpx;
}

.info-detail {
  font-size: 25rpx;
  margin-bottom: 40rpx;
}




