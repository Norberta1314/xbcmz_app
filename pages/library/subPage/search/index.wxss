page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/03/03/kLvUW4.png');
  background-size: cover;
  background-attachment:fixed;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.m-backgraund image {
  width: 115rpx;
  height: 115rpx;
  margin: 100rpx;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 200rpx;
}
.search input {
  background-color: #eeeeee;
  width: 455rpx;
  height: 60rpx;
}
.search .button {
  background-color: #a4b7c9;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #eee;
  font-size: 28rpx;
  width: 500rpx;
}

