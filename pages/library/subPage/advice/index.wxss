page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/03/03/kL7sXT.png');
  background-size: cover;
  background-attachment:fixed;

  display: flex;
  flex-direction: column;
  flex: 1;
}

.popular {
  display: flex;
  flex-direction: column;
  /*max-height: 400rpx;*/
}

.title-img{
  width: 198rpx;
  height: 55rpx;
  margin: 26rpx;
  margin-bottom: 0rpx;
}

.book-txt {
  color: #eee;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  max-height: 350rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
  border-bottom: 30rpx solid #0d0e25;
}

.popular .book {
  color: #eee;
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 10rpx 10rpx 50rpx ;
  /*border-left: 2rpx solid #eee;*/
}

.advice {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.advice-book {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.advice-book .book {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 200rpx;
  height: 278rpx;
  border-radius: 10rpx;
  margin: 25rpx;
}

.advice-book .book image{
  width: 143rpx;
  height: 204rpx;
}

.advice-book .book .name {
  font-size: 30rpx;
}

.advice-book .book .auther {
  font-size: 20rpx;
}



