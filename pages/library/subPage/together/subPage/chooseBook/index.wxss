page {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 100%;
}

button {
  padding: 0;
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/02/21/kRGrIP.png');
  background-size: cover;
  background-attachment: fixed;
  flex: 1;
}

.friend {
  display: flex;
  flex-direction: row;
  margin: 30rpx;
  border-radius: 10rpx;
}

.friend::after{
  border: none;
}

.click {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx;
  border: 1rpx solid #aaa;
}

.click .icon{
  position: absolute;
  top: -30%;
  left: -30%;
  width: 50rpx;
  height: 50rpx;
}

.head {
  background-color: #ead9e4;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 60rpx;
}

.name {
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx;
}

.submit{
  background-color: #cae2eb;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx;
}



