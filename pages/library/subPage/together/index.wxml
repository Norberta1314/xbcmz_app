<view class='m-backgraund'>
  <view class='new-book'>
    <view bindtap='chooseBook' class='choose-button choose-book'>选择书籍</view>
    <view bindtap='chooseCap' class='choose-button choose-cap'>选择章节</view>
    <view bindtap='chooseFriend' class='choose-button choose-friend'>选择好友</view>
    <view bindtap='submit' class='start'>发起</view>
  </view>

  <view class='my-book'>
    <view class='my-title'>我的读书</view>
    <view class='book-block'>
      <view class='book'wx:for='{{ mybook }}' wx:key='{{ index }}'>
        <image src='{{ item.img }}'/>
        <view class='book-name'>{{ item.name }}</view>
      </view>
    </view>
  </view>

  <view class='new-title'>
    新建读书
 </view>
</view>