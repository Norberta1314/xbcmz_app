page {
    min-height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: right;
}
button {
    padding: 0;
}

.m-backgraund {
    background-image: url('https://s2.ax1x.com/2019/03/06/kvYO4s.png');
    background-size: cover;
    background-attachment:fixed;
    color: #eee;
    min-height: 100%;
    width: 100%;
}

.match {
    position: absolute;

    top: 50%;
    left: 20%;
    width: 231rpx;
    height: 231rpx;
}

.random {
    position: absolute;

    top: 30%;
    left: 60%;
    width: 282rpx;
    height: 159rpx;
}

.friend {
    background: rgba(255, 255, 255, 0.4);
    color: #111;
    position: absolute;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    top: 364rpx;
    left: 103rpx;
    width: 544rpx;
    height: 500rpx;
    border-radius: 10rpx;
}

.friend-block {
    background-color: #fff;
    width: 469rpx;
    height: 396rpx;
    border-radius: 10rpx;
}

.auther-info {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin: 40rpx;
    margin-bottom: 0;
}
.auther-info .head{
    background: transparent;
    width: 100rpx;
    height: 100rpx;
    margin: 0;
    border-radius: 50rpx;
}

.auther-info image {
    background-color: #6e93bb;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
.auther-info .auther {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 50rpx;
    padding-left: 30rpx;
}
.follow {
    margin-top: 15rpx;
    margin-right: 28rpx;
    background-color: #4d4e7b;
    color: #eee;
    width: 90rpx;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 28rpx;
}

.friend-info {
    padding: 30rpx;
}