page {
    min-height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: right;
}

.m-backgraund {
    background-image: url('https://s2.ax1x.com/2019/03/05/kXLIG4.png');
    background-size: cover;
    background-attachment:fixed;
    color: #eee;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100%;
    width: 100%;
}

.secret {
    display: flex;
    flex-direction: column;
    width: 640rpx;
    margin: 40rpx;
}

.secret-text {
    background: rgba(17,21,30,0.71);
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 210rpx;
    text-align: center;
    font-size: 30rpx;
   padding-left: 40rpx;
    padding-right: 40rpx;
}

.icon {
    background: rgba(255,255,255,0.8);
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding: 5rpx;
    height: 50rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.icon image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 30rpx;
}

.icon text {
    color: #5b5b5b;
    margin-right: 40rpx;
}
