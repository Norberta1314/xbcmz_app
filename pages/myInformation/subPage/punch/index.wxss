page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
  /*justify-content: flex-end;*/
}

.m-backgraund {
  background-image: url('https://s2.ax1x.com/2019/03/05/kjuiXn.png');
  background-size: cover;
  background-attachment:fixed;
  color: #111;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  width: 100%;
}

.title {
  width: 100%;
  height: 83rpx;
  line-height: 83rpx;
  padding-left: 100rpx;
  border-bottom: 6rpx solid #cacaca;
}
.check-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 66rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #cacaca;
}
.check-item .name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.check-item .color-block {
  background-color: #aa89bd;
  width: 15rpx;
  height: 66rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.check-item .check-title{
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size: 30rpx;
}

.check-item image {
  width: 84rpx;
  height: 84rpx;
  padding-right: 20rpx;
}

.customize {
  height: 106rpx;
  line-height: 106rpx;
  padding-left: 60rpx;
  border-bottom: 2rpx solid #cacaca;
  font-size: 35rpx;
}

.punch-card {
  position: absolute;
  top: 200rpx;
  left: 125rpx;
  width: 500rpx;
  min-height: 500rpx;
  border-radius: 20rpx;
  border-bottom: 20rpx;
  background-color: #f6e8f1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.punch-title {
  padding: 20rpx;
}

.punch-card .content {
  padding: 40rpx;
}

.button-delay {
  background-color: #b2e2fa;
  width: 218rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  margin: 20rpx;
}