page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
}
.m-backgraund {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: url('https://s2.ax1x.com/2019/02/28/k7MV0g.png');
  background-size: cover;
  background-attachment:fixed;
  flex: 1;
}

.term {
  color: #fff;
  margin: 40rpx 390rpx 10rpx 0rpx;
}
.term-text {
  color: #fff;
  margin-bottom: 40rpx;
}

.test-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  background-color: #eeeeee;
  color: #111;
  width: 666rpx;
  height: 955rpx;

  border-radius: 10rpx;
}

.test-block .test-item {
  display: flex;
  flex-direction: column;

  background-color: #c5c1db;
  width: 630rpx;
  margin-top: 27rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.test-item .name {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: baseline;
  margin: 20rpx;
}

.test-item .time {
  margin-left: 40rpx;
  margin-bottom: 10rpx;
}
.test-item .place {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0rpx 100rpx 10rpx 40rpx;
}

