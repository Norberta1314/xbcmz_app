page {
    min-height: 100%;
    display: flex;
    flex-direction: row;
}
.teacher-table{
    color:#ffffff;
    background-image: url('https://s2.ax1x.com/2019/03/03/kLzuKs.png');
    background-size: cover;
    background-attachment:fixed;
    display: flex;
    flex-direction: column;
    flex: 1;
}

.max-box{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.teacher-name{
    font-size: 56rpx;
    color:#ffffff;
    margin: 100rpx 100rpx 100rpx 20rpx;
    width: 750rpx;
    text-align: center;
    background-color: rgba(124, 162, 190, .1);

}
.teacher-email{
    font-size: 32rpx;
    color:#F5F5F5;
    margin: 10rpx 100rpx 30rpx 0rpx;
}
.teacher-tel{
    font-size: 32rpx;
    color:#F5F5F5;
    margin: 30rpx 100rpx 100rpx 0rpx;

}