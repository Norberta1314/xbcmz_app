page {
  min-height: 100%;
  display: flex;
  flex-direction: row;
}
.m-backgraund {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  background-image: url('https://s2.ax1x.com/2019/02/27/kT4VaT.png');
  background-size: cover;
  background-attachment:fixed;
  flex: 1;
}
.user-info {
  display: flex;
  flex-direction: row;
  color: #fff;
  margin-bottom: 30rpx;
}
.user-block {
  display: block;
  margin: 60rpx 0rpx 10rpx 50rpx;
  font-size: 30rpx;
}
.term {
  display: flex;
  flex-direction: column;
  margin: 30rpx 10rpx 10rpx 70rpx;
}
.term-block {
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
}
.term-block image {
  width: 64rpx;
  height: 64rpx;
}

.grade-block {
  display: flex;
  flex-direction: column;
  /*justify-content: center;*/
  /*align-items: center;*/
  background-color: #fff;
  width: 666rpx;
  margin-bottom: 50rpx;
  min-height: 950rpx;
  border-radius: 10rpx;
}

.gpa {
  font-size: 50rpx;
  color: #000;
  margin: 40rpx 30rpx 10rpx 30rpx;
  padding-left: 20rpx;
  border-bottom: 6rpx solid #000;
}

.score-block {
  display: flex;
  flex-direction: column;
}

.score {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 40rpx 30rpx 10rpx 30rpx;
  padding-left: 20rpx;
  border-bottom: 3rpx solid #000;
}
