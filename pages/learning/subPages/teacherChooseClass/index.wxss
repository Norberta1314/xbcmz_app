page {
    min-height: 100%;
    display: flex;
    flex-direction: row;
}

.m-backgraund {
    background-image: url('https://s2.ax1x.com/2019/03/15/AET0nf.png');
    background-size: cover;
    background-attachment:fixed;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
}

.classList {
    width: 466rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background-color: #7897ba;
    margin: 20rpx;


}

.class-block {
    transition:all 0.5s linear;
}
.activeClass {
    visibility:hidden;
    opacity:0;
}

.button_group {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.button_icon image{
    width: 200rpx;
    height: 200rpx;
    margin: 50rpx;
}

